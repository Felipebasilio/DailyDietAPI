{
  "compilerOptions": {
    "target": "ES2020",                      // Versão do JavaScript gerado
    "module": "CommonJS",                    // Tipo de módulo usado (recomendado para Node.js)
    "rootDir": "./src",                      // Pasta onde ficam seus arquivos TypeScript
    "outDir": "./dist",                      // Pasta onde os arquivos gerados serão salvos
    "strict": true,                          // Modo estrito do TypeScript
    "esModuleInterop": true,                 // Permite importar módulos ES6 como Fastify
    "skipLibCheck": true,                    // Ignora verificação de tipagens de bibliotecas para acelerar o processo
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],               // Quais arquivos o TypeScript deve compilar
  "exclude": ["node_modules"]               // O que deve ser ignorado
}
